<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="608.0" prefWidth="887.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.apppackage.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" layoutX="36.0" layoutY="65.0" prefHeight="20.0" prefWidth="58.0" text="To">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="toaddress" layoutX="36.0" layoutY="97.0" prefHeight="25.0" prefWidth="802.0" promptText="Enter recipient gmail">
        <font>
            <Font size="13.0" />
        </font></TextField>

    <TextField fx:id="subjectid" layoutX="36.0" layoutY="176.0" onKeyTyped="#onSubjectTextChanged" prefHeight="25.0" prefWidth="796.0" promptText="Subject">
        <font>
            <Font size="13.0" />
        </font></TextField>

    <TextArea fx:id="messageid" layoutX="32.0" layoutY="211.0" prefHeight="243.0" prefWidth="796.0" promptText="Type here...">
        <font>
            <Font size="13.0" />
        </font></TextArea>

    <Button fx:id="discardId" layoutX="660.0" layoutY="539.0" mnemonicParsing="false" onAction="#onDiscardButtonClick" prefHeight="30.0" prefWidth="80.0" text="Discard" />
    <Button fx:id="sendId" layoutX="756.0" layoutY="538.0" onAction="#onSendButtonClick" prefHeight="31.0" prefWidth="80.0" text="Send" textFill="WHITE" />

    <Separator layoutX="36.0" layoutY="137.0" prefHeight="0.0" prefWidth="796.0" />

    <Label fx:id="subjecttext" layoutX="32.0" layoutY="33.0" text="Subject">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Button fx:id="attachId" layoutX="49.0" layoutY="539.0" mnemonicParsing="false" onAction="#onAttachFileClick" prefHeight="31.0" prefWidth="91.0" text="Attach File" />

    <!-- HBox to hold attachments -->
    <HBox fx:id="attachmentsHBox" layoutX="46.0" layoutY="471.0" prefHeight="48.0" prefWidth="796.0" spacing="5.0" />
    <Label layoutX="40.0" layoutY="150.0" text="Subject">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <Label fx:id="sizeoverload" layoutX="255.0" layoutY="538.0" prefHeight="31.0" prefWidth="297.0" textFill="#ff2200">
        <font>
            <Font size="13.0" />
        </font>
    </Label>
</Pane>
